---
import Layout from "../layouts/PageLayout.astro";
---

<Layout>
  <secion id="home">
    <div class="w-full h-screen flex flex-col justify-center items-start">
      <!-- Header -->
      <div class="px-10">
        <h1 class="text-gray-100 font-light text-4xl">
          Hello. I'm
          <span
            class="font-bold bg-gradient-to-t from-blue-500 to-blue-200 text-transparent bg-clip-text"
            >Josiah</span
          >.
        </h1>
        <h1 class="text-gray-100 text-lg">Senior Software Developer</h1>
      </div>
      <!-- Divider -->
      <div class="flex flex-row w-full items-center relative">
        <div
          class="w-2/3 my-6 h-[3px] bg-gradient-to-l from-blue-500 to-zinc-800"
        >
        </div>

        <div class="w-3 h-3 rounded-full bg-blue-500 absolute right-1/3 z-0">
        </div>
      </div>
      <!-- Description -->
      <div class="px-10">
        <p class="text-gray-100 text-opacity-50">
          Committed to user experience, product performance, and excellence in
          code quality.
        </p>
      </div>
    </div>
  </secion>
</Layout>
