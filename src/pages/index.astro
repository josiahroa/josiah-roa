---
import Nav from "../components/Nav";
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Josiah Roa</title>
  </head>
  <body class="bg-zinc-900">
    <div class="relative">
      <Nav client:only>
        <Nav.Item id="home" label="Home" client:only />
        <Nav.Item id="about" label="About" client:only />
        <Nav.Item id="work" label="Work" client:only />
        <Nav.Item id="blog" label="Blog" client:only />
      </Nav>
      <secion id="home">
        <div class="w-full h-screen flex flex-col justify-center items-start">
          <!-- Header -->
          <div class="px-10">
            <h1 class="text-white font-light text-4xl">
              Hello. I'm
              <span
                class="font-bold bg-gradient-to-t from-blue-500 to-blue-200 text-transparent bg-clip-text"
                >Josiah</span
              >.
            </h1>
            <h1 class="text-white text-lg">Software Developer</h1>
          </div>
          <!-- Divider -->
          <div class="flex flex-row w-full items-center relative">
            <div
              class="w-2/3 my-6 h-[3px] bg-gradient-to-l from-blue-500 to-zinc-800"
            >
            </div>

            <div
              class="w-3 h-3 rounded-full bg-blue-500 absolute right-1/3 z-0"
            >
            </div>
          </div>
          <!-- Description -->
          <div class="px-10">
            <p class="text-white text-opacity-50">
              Committed to user experience, product performance, and excellence
              in code quality.
            </p>
          </div>
        </div>
      </secion>

      <section id="about">
        <div class="h-screen pt-10">
          <h1>About</h1>
        </div>
      </section>
    </div>
  </body>
</html>
